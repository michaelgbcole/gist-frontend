generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Form {
  id          Int    @id @default(autoincrement())
  title       String
  questionIds Int[]
  creatorId   String
  uniqueLink  String @unique
  overallFeedback String?
}

model Question {
  id             Int      @id @default(autoincrement())
  type           String
  question       String
  gist           String?
  options        String[]
  correctOptions Int[]
}

model School {
  id              Int    @id @default(autoincrement())
  name            String
  location        String
  administratorId Int
  teacherIds      Int[]
}

model UserData {
  id                 String       @id @default(uuid())
  email              String       @unique
  name               String?
  formIds            Int[]
  isPayer            Boolean      @default(true)
  stripe_customer_id String?
  averagePerformance    String?
  essayFeedback     String @default("no data")
}

model Submission {
  id         Int       @id @default(autoincrement())
  studentId  String
  formId     Int
  answers    Json      
  createdAt  DateTime  @default(now())
  feedback       String?
  updatedAt  DateTime  @updatedAt
  score     Int
  overallFeedback String?
}

model Rubric {
  id Int  @id @default(autoincrement())
  userId String
  rubricJSON Json //json in sql lets fucking go
  overallFeedback String?
}

model Grade {
  id Int @id @default(autoincrement())
  userId String
  rubricId Int
  feedback String
  score String
  fileName String
  batchId Int
  rubricData String
  overall_feedback String?
}

model Batch {
  id Int @id @default(autoincrement())
  userId String
  name String
  rubricId Int
  status String @default("pending")
  fileUrls String[]
  overallFeedback String?
}

model Class {
  id Int @id @default(autoincrement())
  name String
  description String
  teacherId String
  overallFeedback String?
  studentIds String[]
}

model Student {
  id String @id @default(uuid())
  name String
  email String
  classId Int
}
