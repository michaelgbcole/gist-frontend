generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model SAQ {
  id          Int       @id @default(autoincrement())
  question    String
  gist        String
}

model MultipleChoice {
  id          Int       @id @default(autoincrement())
  question    String
  options     String[]
  correctOptions Int[]
}