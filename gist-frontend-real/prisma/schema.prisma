generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Form {
  id          Int    @id @default(autoincrement())
  title       String
  questionIds Int[]
  creatorId   String
  uniqueLink  String @unique
}

model Question {
  id             Int      @id @default(autoincrement())
  type           String
  question       String
  gist           String?
  options        String[]
  correctOptions Int[]
}

model School {
  id              Int    @id @default(autoincrement())
  name            String
  location        String
  administratorId Int
  teacherIds      Int[]
}

model UserData {
  id                 String       @id @default(uuid())
  email              String       @unique
  name               String?
  formIds            Int[]
  isPayer            Boolean      @default(false)
  stripe_customer_id String?
  role               String       @default("student")
}

model Submission {
  id         Int       @id @default(autoincrement())
  studentId  String
  formId     Int
  answers    Json      
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  score     Int
}

model Rubric {
  id Int  @id @default(autoincrement())
  userId String
  rubricJSON Json //json in sql lets fucking go
}

model Grade {
  id Int @id @default(autoincrement())
  userId String
  rubricId Int
  feedback String
  score String
  fileName String
  rubricData Json
}

model Batch {
  id Int @id @default(autoincrement())
  userId String
  name String
  rubricId Int
  fileUrls String[]
}