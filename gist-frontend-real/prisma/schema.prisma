generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Form {
  id          Int       @id @default(autoincrement())
  title       String
  questionIds Int[]
  creatorId   String    // Change this to String to match the user's UUID
  uniqueLink  String    @unique
}


model Question {
  id            Int       @id @default(autoincrement())
  type          String
  question      String
  gist          String?
  options       String[]
  correctOptions Int[]
}

model School {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  administratorId Int
  teacherIds Int[]
}



model UserData {
  id    String @id @default(uuid())
  email String @unique
  name  String?
  formIds Int[]
}

model Submission {
  id       Int      @id @default(autoincrement())
  studentId Int
  formId    Int
  answerData String[]
}

