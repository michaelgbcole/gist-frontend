generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Form {
  id          Int       @id @default(autoincrement())
  title       String
  questionIds Int[]
}


model Question {
  id            Int       @id @default(autoincrement())
  type          String
  question      String
  gist          String?
  options       String[]
  correctOptions Int[]
}